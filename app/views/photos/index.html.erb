<div class="ui vertical masthead center aligned segment">
  <div class="ui margin-top-4 container">
    <div class="ui grid">
      <div class ="ui centered aligned row ">
        <% if current_user %>
          <%= link_to "Add a Photo", new_photo_path, class: "ui red button" %>
        <% end %>
      </div>
      <div class="ui centered aligned row">
        <% @photos.each do |photo| %>
          <a class="photo fancybox.iframe" href="https://www.youtube.com/embed/<%= photo.url %>" rel="gallery1">
            <img class ="thumbnail" src= "http://img.youtube.com/vi/<%= photo.url %>/0.jpg"/>
            <h4 class="thumbnail-name"><%= photo.description %></h4>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</div>

